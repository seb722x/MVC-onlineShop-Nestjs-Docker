{{#> admin}}
  {{#*inline "content"}}
    <div class="card mb-4">
      <div class="card-header">
        Create Users
      </div>
      <div class="card-body">
        {{#if flashErrors}}
        {{#each flashErrors}}
          <p class="alert alert-danger">{{this}}</p>
        {{/each}}
        {{/if}}
        <form method="POST" action="/admin/users/store"enctype="form-data">
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Name:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="name" type="text" class="form-control" required>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Email:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="email" type="email" class="form-control" required>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Password:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="password" type="password" class="form-control" required>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Roles:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="role" type="text" class="form-control" required>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="mb-3 row">
                <label class="col-lg-2 col-md-6 col-sm-12 col-form-label">Balance:</label>
                <div class="col-lg-10 col-md-6 col-sm-12">
                  <input name="balance" type="number" class="form-control" required>
                </div>
              </div>
            </div>
            
          </div>
          
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        Manage Users
      </div>
      <div class="card-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{getId}}</td>
              <td>{{getName}}</td>
              <td>
                <a class="btn btn-primary" href="/admin/users/{{getId}}">
                  <i class="bi-pencil"></i>
                </a>
              </td>
              <td>
                <form action="/admin/products/{{getId}}" method="DELETE">
                  <button class="btn btn-danger">
                    <i class="bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/inline}}
{{/admin}}